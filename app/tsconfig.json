{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@*": ["src/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
