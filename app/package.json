{
  "name": "apollo-graphql-api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && tscpaths -p tsconfig.json -s src -o dist",
    "dev": "pnpm docker:up && tsx watch src",
    "dev:experimental": "sh ./scripts/start.sh",
    "start": "node  dist/index.js",
    "start:dev": "tsx watch src",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm run lint && pnpm run format",
    "fix": "pnpm run lint:fix && pnpm run format",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:import": "tsx seed/import.ts",
    "db:export": "tsx seed/export.ts"
  },
  "engines": {
    "node": ">=20.0"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@aws-sdk/client-bedrock-runtime": "^3.598.0",
    "@aws-sdk/client-lambda": "^3.577.0",
    "@aws-sdk/client-s3": "^3.583.0",
    "@aws-sdk/s3-request-presigner": "^3.583.0",
    "@clerk/clerk-sdk-node": "^5.0.7",
    "@graphql-tools/schema": "^10.0.4",
    "@graphql-tools/utils": "^10.2.1",
    "@langchain/community": "^0.2.9",
    "@langchain/core": "^0.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "globals": "^15.3.0",
    "graphql": "^16.8.1",
    "graphql-redis-subscriptions": "^2.6.1",
    "graphql-ws": "^5.16.0",
    "mongoose": "^8.4.0",
    "pino": "^9.1.0",
    "tscpaths": "^0.0.9",
    "uuidv4": "^6.2.13",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "pino-pretty": "^11.1.0",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.10.0"
  }
}
