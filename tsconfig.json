{
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "incremental": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "types/*": ["./@types/*"],
      "@*": ["src/*"]
    }
  },
  "include": ["./src/**/*", "./**/*.ts", "./**/*.graphql", "seed"],
  "exclude": ["node_modules", "dist", "seed", "./codegen.ts"]
}
