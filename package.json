{
  "name": "magiscribe-api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "setup": "pnpm run setup:install && pnpm run setup:env",
    "setup:install": "pnpm install",
    "setup:env": "cp .env.example .env",
    "build": "tsc -p tsconfig.json && tscpaths -p tsconfig.json -s src -o dist",
    "predev": "pnpm run codegen",
    "dev": "sh ./scripts/start.sh",
    "start": "node -r newrelic dist/index.js",
    "start:dev": "tsx watch src",
    "test": "jest --coverage --testMatch \"**/?(*.)+(unit|spec).test.ts\"",
    "test:integration": "jest --coverage --testMatch \"**/?(*.)+(integration).test.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "pnpm run lint && pnpm run format",
    "fix": "pnpm run lint:fix && pnpm run format",
    "docker:up": "docker compose -p magiscribe-api up -d",
    "docker:down": "docker compose -p magiscribe-api down",
    "db:import": "tsx seed/import.ts",
    "db:export": "tsx seed/export.ts",
    "db:clean": "tsx seed/clean.ts",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "engines": {
    "node": ">=20.0"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@as-integrations/fastify": "^2.1.1",
    "@aws-sdk/client-bedrock-runtime": "^3.716.0",
    "@aws-sdk/client-lambda": "^3.716.0",
    "@aws-sdk/client-s3": "^3.717.0",
    "@aws-sdk/client-ses": "^3.716.0",
    "@aws-sdk/lib-storage": "^3.717.0",
    "@aws-sdk/s3-request-presigner": "^3.717.0",
    "@clerk/backend": "^1.21.4",
    "@fastify/cors": "^10.0.1",
    "@graphql-tools/schema": "^10.0.13",
    "@graphql-tools/utils": "^10.6.4",
    "@langchain/community": "^0.3.19",
    "@langchain/core": "^0.3.26",
    "@newrelic/apollo-server-plugin": "^6.0.0",
    "dotenv": "^16.4.7",
    "elevenlabs": "^1.50.2",
    "fastify": "^5.2.0",
    "globals": "^15.14.0",
    "graphql": "^16.10.0",
    "graphql-redis-subscriptions": "^2.7.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-type-json": "^0.3.2",
    "graphql-ws": "^5.16.0",
    "jest": "^29.7.0",
    "mongoose": "^8.9.2",
    "newrelic": "^12.9.0",
    "pino": "^9.6.0",
    "tscpaths": "^0.0.9",
    "uuid": "^11.0.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/typescript": "4.1.2",
    "@graphql-codegen/typescript-resolvers": "4.4.1",
    "@parcel/watcher": "^2.5.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "pino-pretty": "^13.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  }
}
